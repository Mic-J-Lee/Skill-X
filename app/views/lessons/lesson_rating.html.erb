<head><link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet"></head>

<p id="notice"><%= notice %></p>

<h1 class="text-center" style="color: #ffa31a; font-family:Ubuntu;">Rate My Lesson</h1>
<div class='container'>
  <div class='row'>
    <div class="col-sm-4" align='left'>
        <%if @lesson.skill.avatar.url%>
          <%= image_tag @lesson.skill.avatar.normal.url %>      
        <%else%>
          <%= image_tag("/images/generic_skill.jpg") %>
        <%end%>
    </div>
    <div class='col-sm-4'>
      <div class="text-center" style="color:#6396e8;">
      <br><br><br><br>
      <p>
        <strong>Skill</strong>
        <%= @lesson.skill.title %>
      </p>

      <p>
        <strong>Start Time</strong>
        <%= @lesson.start_time %>
      </p>

      <p>
        <strong>Teacher</strong>
        <%= @lesson.teacher.first_name %> <%= @lesson.teacher.last_name %>
      </p>

      <p>
        <strong>Student</strong>
        <%= @lesson.student.first_name %> <%= @lesson.student.last_name %>
      </p>
    </div>
  </div>
</div>
<p>
  <strong>Rate Your Experience</strong>
  
  <%= render 'rating_form', lesson: @lesson %>


</p>




<%= link_to 'Back', lessons_path, {style: "color: #6396e8"} %>
</div>
