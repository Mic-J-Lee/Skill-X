<h1 align="center">List of Skills</h1><br><br><br>

<table>
  <thead>
    <tr>
      <th style="padding:0 30px 0 30px;" ></th>
      <th style="padding:0 30px 0 30px;">Title</th>
      <th style="padding:0 30px 0 30px;">Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td style="padding:0 30px 0 30px;"><%= image_tag skill.avatar.thumb.url if skill.avatar.url %></td>
        <td style="padding:0 30px 0 30px;"><%= skill.title %></td>
        <td style="padding:0 30px 0 30px;"><%= skill.description %></td>
        <td style="padding:0 30px 0 30px;"><%= link_to 'Show', skill %></td>
        <td style="padding:0 30px 0 30px;"><%= link_to 'Edit', edit_skill_path(skill) if current_user == skill.teacher %></td>
        <td style="padding:0 30px 0 30px;"><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } if current_user == skill.teacher %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
<h3><%= link_to 'New Skill', new_skill_path %></h3>
</div><br><br><br><br>
