
<style>
  .request-lesson {
    color: white;
    background-color: orange;
  }
  .request-chat {
    color: white;
    background-color: skyblue;
  }
  .view-skill {
    color: white;
    background-color: green;
  }
  .invisible {
    visibility: hidden;
  }
</style>

<head>
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
</head>

<body style="background-color: #6396e8;">

<h1 style="color: #ffa31a; font-family:Ubuntu;">My Skills</h1> <br>

<% @skills.each do |skill| %>
  <div class="container">
    <div class="card" style="background-color: white; border-radius: 25px; height: 100px; padding-left: 0px; overflow: hidden; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); margin-bottom: 50px; width: 80%">
      <div class="row">
        <div class="col-sm-4" align='left'>
            <%if skill.avatar.url%>
              <%= image_tag skill.avatar.thumb.url %>      
            <%else%>
              <%= image_tag("/images/generic_skill.jpg") %>
            <%end%>
        </div>
        <div class='col-sm-4'>
          <div class="front"><h5><%= skill.title %></h5><br/><%= skill.description %><br/>
          </div>
        </div>

        <div class="col-sm-4"> 
          <br>
          <%= button_to "View Full Details", skill,
                :class => "view-skill btn", :method => :get %>
          <%= link_to 'Edit', edit_skill_path(skill), :class => "request-chat btn" if current_user == skill.teacher %> <%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' } if current_user == skill.teacher %>
        </div>
      </div> 
    </div>
  </div>
<% end %>


<br>
<div style=" font-size: medium">
  <%= link_to 'Add A New Skill', new_skill_path, {style: "color: #ffa31a "} %>
</div>

</body>
